# PersonaTrade Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# API CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_NAME=PersonaTrade
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION="Rent and share personality traits through AI-powered coaching"

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_OAUTH=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=true

# ===========================================
# AUTHENTICATION
# ===========================================
# OAuth providers (if enabled)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_client_id

# ===========================================
# PAYMENT PROCESSING
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Hotjar (for user analytics)
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# ===========================================
# SOCIAL & SHARING
# ===========================================
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_TWITTER_HANDLE=@personatrade

# ===========================================
# MAPS & LOCATION
# ===========================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===========================================
# WEBSOCKETS
# ===========================================
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:5001

# ===========================================
# CDN & ASSETS
# ===========================================
NEXT_PUBLIC_CDN_URL=https://cdn.personatrade.com
NEXT_PUBLIC_ASSETS_URL=https://assets.personatrade.com

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable development tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Mock data in development
NEXT_PUBLIC_USE_MOCK_DATA=false

# Debug mode
NEXT_PUBLIC_DEBUG=false

# ===========================================
# SEO & META
# ===========================================
NEXT_PUBLIC_SITE_NAME=PersonaTrade
NEXT_PUBLIC_SITE_DESCRIPTION="The world's first personality trading platform"
NEXT_PUBLIC_SITE_KEYWORDS="personality,traits,coaching,AI,self-improvement"
NEXT_PUBLIC_SITE_AUTHOR=PersonaTrade Team

# ===========================================
# PERFORMANCE
# ===========================================
# Image optimization
NEXT_PUBLIC_IMAGE_QUALITY=75
NEXT_PUBLIC_IMAGE_FORMATS=webp,jpg

# ===========================================
# SECURITY
# ===========================================
# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=https://api.personatrade.com/csp-report